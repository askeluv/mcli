{
  "name": "mcli",
  "version": "0.1.0",
  "description": "A CLI for discovering and comparing CLI tools",
  "type": "module",
  "bin": {
    "mcli": "./bin/mcli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "cli",
    "tools",
    "discovery",
    "registry"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.3.2",
    "@vitest/coverage-v8": "^4.0.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.78.0"
  }
}
