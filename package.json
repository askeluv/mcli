{
  "name": "@askeluv/mcli",
  "version": "0.0.3",
  "description": "A CLI for discovering and comparing CLI tools",
  "type": "module",
  "bin": {
    "mcli": "./bin/mcli.js"
  },
  "files": [
    "bin",
    "dist",
    "registry"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm test && npm run build"
  },
  "keywords": [
    "cli",
    "tools",
    "discovery",
    "registry"
  ],
  "license": "MIT",
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.78.0",
    "@types/node": "^25.3.2",
    "@vitest/coverage-v8": "^4.0.18",
    "openai": "^6.25.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
